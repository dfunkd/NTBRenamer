<Window x:Class="NTBRenamer.Windows.NTBRenamerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:NTBRenamer.Windows"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NTBRenamer.ViewModels"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        mc:Ignorable="d"
        Background="Transparent"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Title="NTBRenamerWindow"
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:NTBRenamerWindow.ChangeDirectoryCommand}" CanExecute="CanExecuteChangeDirectoryCommand" Executed="ExecutedChangeDirectoryCommand" />
        <CommandBinding Command="{x:Static local:NTBRenamerWindow.CloseCommand}" CanExecute="CanExecuteCloseCommand" Executed="ExecutedCloseCommand" />
        <CommandBinding Command="{x:Static local:NTBRenamerWindow.FileCleanupCommand}" CanExecute="CanExecuteFileCleanupCommand" Executed="ExecutedFileCleanupCommand" />
        <CommandBinding Command="{x:Static local:NTBRenamerWindow.ProcessCommand}" CanExecute="CanExecuteProcessCommand" Executed="ExecutedProcessCommand" />
        <CommandBinding Command="{x:Static local:NTBRenamerWindow.RunBatchCommand}" CanExecute="CanExecuteRunBatchCommand" Executed="ExecutedRunBatchCommand" />
        <CommandBinding Command="{x:Static local:NTBRenamerWindow.StripExtensionsCommand}" CanExecute="CanExecuteStripExtensionsCommand" Executed="ExecutedStripExtensionsCommand" />
    </Window.CommandBindings>

    <Window.DataContext>
        <vm:NTBRenamerViewModel />
    </Window.DataContext>

    <Grid Background="{DynamicResource Darker}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Background="{DynamicResource HeaderFade}" BorderThickness="0" CornerRadius="0, 0, 10, 10" Padding="0, 0, 0, 15"
                Margin="0, 0, 0, 5" MouseDown="OnDrag">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="55" />
                </Grid.ColumnDefinitions>

                <fa:ImageAwesome x:Name="faLoading" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Foreground="{DynamicResource RuanRedFade}" Icon="Refresh" Margin="10, 0, 0, 0" Spin="True"
                                 Height="24" HorizontalAlignment="Right" Visibility="{Binding IsProcessing, Converter={StaticResource BoolToCollapsedConverter}}" Width="24" />

                <StackPanel Grid.Column="1" HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Foreground="{DynamicResource RuanRedFade}" FontWeight="Bold" FontSize="48" FontStyle="Italic" HorizontalAlignment="Right" Margin="15, 0" Text="RUAN"
                               VerticalAlignment="Center" />
                    <TextBlock Foreground="{DynamicResource DarkerHeaderFade}" FontWeight="Bold" FontSize="24" HorizontalAlignment="Left" Margin="10, 8, 5, 0"
                               Text="NTB Archive Files Renamer" VerticalAlignment="Center" />
                </StackPanel>
                <Button Grid.Column="2" Command="local:NTBRenamerWindow.CloseCommand" Margin="5, 0" VerticalAlignment="Center" Width="30">
                    <Button.Content>
                        <TextBlock Text="X" />
                    </Button.Content>
                </Button>
            </Grid>
        </Border>

        <TextBlock x:Name="txtCount" Grid.Column="1" Grid.Row="1" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource Lightest}" HorizontalAlignment="Center"
                   Margin="10, 5, 25, 0" VerticalAlignment="Center">
                    <Run Text="Processed:" />
                    <Run Foreground="{DynamicResource RuanRed}" Text="{Binding FileCount, UpdateSourceTrigger=PropertyChanged}" />
                    <Run Text=" | " />
                    <Run Text="Successful:" />
                    <Run Foreground="{DynamicResource RuanRed}" Text="{Binding ProcessedCount, UpdateSourceTrigger=PropertyChanged}" />
                    <Run Text=" | " />
                    <Run Text="Skipped:" />
                    <Run Foreground="{DynamicResource RuanRed}" Text="{Binding SkipCount, UpdateSourceTrigger=PropertyChanged}" />
                    <Run Text=" | " />
                    <Run Text="Failed:" />
                    <Run Foreground="{DynamicResource RuanRed}" Text="{Binding FailedCount, UpdateSourceTrigger=PropertyChanged}" />
        </TextBlock>

        <TextBlock x:Name="txtElapsed" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource Lightest}"
                   HorizontalAlignment="Center" Margin="10, 0" Text="{Binding ElapsedTime, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" />

        <Border Grid.Column="1" Grid.Row="3" Background="{DynamicResource DarkHeaderFade}" CornerRadius="8" Margin="0, 5">
            <DockPanel LastChildFill="True">
                <TextBlock DockPanel.Dock="Left" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource ButtonBrush}" HorizontalAlignment="Right" Margin="35, 5, 10, 5"
                           Text="Directory" />
                <Button DockPanel.Dock="Right" Command="local:NTBRenamerWindow.ChangeDirectoryCommand" Height="25" Margin="5, 3" Width="25">
                    <Button.Content>
                        <TextBlock Text="..." />
                    </Button.Content>
                </Button>
                <Border DockPanel.Dock="Left" BorderBrush="{DynamicResource Darkest}" BorderThickness="1" Margin="0, 5, 5, 5">
                    <TextBox DockPanel.Dock="Left" Background="{DynamicResource ReverseHeaderFade}" BorderThickness="0" CaretBrush="{DynamicResource ButtonBrush}"
                             Foreground="{DynamicResource ButtonBrush}" IsReadOnly="True" Text="{Binding SelectedDirectory}" VerticalContentAlignment="Center" />
                </Border>
            </DockPanel>
        </Border>

        <DockPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4" HorizontalAlignment="Center" LastChildFill="False" Margin="10">
            <Button DockPanel.Dock="Left" Command="local:NTBRenamerWindow.ProcessCommand" Margin="5, 0" VerticalAlignment="Center" Width="150">
                <Button.Content>
                    <TextBlock Text="Process Files" />
                </Button.Content>
            </Button>

            <Button DockPanel.Dock="Left" Command="local:NTBRenamerWindow.RunBatchCommand" Margin="5, 0" VerticalAlignment="Center" Width="150">
                <Button.Content>
                    <TextBlock Text="Run Batch Process" />
                </Button.Content>
            </Button>

            <Button DockPanel.Dock="Left" Command="local:NTBRenamerWindow.StripExtensionsCommand" Margin="5, 0" VerticalAlignment="Center" Width="150">
                <Button.Content>
                    <TextBlock Text="Strip Extensions" />
                </Button.Content>
            </Button>

            <Button DockPanel.Dock="Left" Command="local:NTBRenamerWindow.FileCleanupCommand" Margin="5, 0" VerticalAlignment="Center" Width="150">
                <Button.Content>
                    <TextBlock Text="File Cleanup" />
                </Button.Content>
            </Button>
        </DockPanel>
    </Grid>
</Window>
